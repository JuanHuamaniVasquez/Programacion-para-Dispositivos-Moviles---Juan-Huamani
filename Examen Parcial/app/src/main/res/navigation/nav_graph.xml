<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.examen.WelcomeFragment"
        android:label="Welcome" >
        <action
            android:id="@+id/action_welcome_to_game"
            app:destination="@id/gameFragment"/>
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.examen.GameFragment"
        android:label="Game">
        <action
            android:id="@+id/action_game_to_result"
            app:destination="@id/resultFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.examen.ResultFragment"
        android:label="Result">
        <action
            android:id="@+id/action_result_to_game"
            app:destination="@id/gameFragment" />
    </fragment>
</navigation>
